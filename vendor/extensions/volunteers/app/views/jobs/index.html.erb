<h2>New Job</h2>
<% form_for @job do |j| %>
  <table>
    <tr>
      <td><%= j.label :name %></td>
      <td><%= j.text_field :name %></td>
    </tr>
    <tr>
      <td><%= j.label :quantity %></td>
      <td><%= j.text_field :quantity %></td>
    </tr>
  </table>
  <%= submit_tag 'Create' %>
<% end %>

<hr />

<h1>All Jobs</h1>
<table>
  <tr>
    <th>Desc.</th>
    <th>Need</th>
    <th>Avail.</th>
  </tr>
<% for job in @jobs %>
  <tr>
    <td><%= job.name %></td>
    <td> <%= job.quantity %></td>
    <td><%= job.volunteers.count %></td>
    <td><%= link_to('edit', :action => 'edit', :id => job.id) %></td>
  </tr>
<% end %>
</table>
