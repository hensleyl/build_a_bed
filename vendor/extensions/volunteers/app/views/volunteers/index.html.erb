<h1>New Volunteer</h1>
<% form_for @volunteer do |v| %>
  <%= v.label :first_name %>
  <%= v.text_field :first_name %><br />
  <%= v.label :last_name %> 
  <%= v.text_field :last_name %><br />
  <%= v.label :phone %>
  <%= v.text_field :phone %><br />
  <%= v.label :email %>
  <%= v.text_field :email %><br />
  <%= v.label :job %>
  <%= collection_select(:volunteer, :job_id, Job.all, :id, :name, {:prompt => true}) %><br />
  <%= submit_tag 'Create' %>
<% end %>
<hr />
<h1>All Volunteers</h1>
<table>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Phone</th>
    <th scope="col">Email</th>
    <th scope="col">Job</th>
    <th scope="col">Admin Actions</th>
  </tr>
<% for volunteer in @volunteers %>
  <tr><td><%= volunteer.first_name %> <%= volunteer.last_name %></td><td> <%= volunteer.phone %></td><td> <%= mail_to volunteer.email %></td><td><%= volunteer.job.name %></td><td><%= link_to('edit', :action => 'edit', :id => volunteer.id) %></td></tr>
<% end %>
</table>
